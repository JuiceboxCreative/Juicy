<section class="module module-sub-pages">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-12 col-lg-8 col-lg-offset-2">
                <div class="row flex">
                {% for item in module.pages %}
                    <div class="col-sm-4">
                    {% include ["tease-#{module.name}.twig", 'tease-subpage.twig', 'tease.twig'] with {
                        post: item,
                        loop: loop
                    } only %}
                    </div>
                {% endfor %}
                </div>
            </div>
        </div>
    </div>
</section>
