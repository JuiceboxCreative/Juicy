<footer class="{% block sectionClasses %}footer footer-primary{% endblock %} ">
    {% block beforeContainer %}{% endblock %}
    <div class="{% block containerClasses %}container{% endblock %}">
        {% block beforeRow %}{% endblock %}
        <div class="{% block rowClasses %}row{% endblock %}">
            {% block beforeRowContent %}{% endblock %}
            {% block rowContent %}
                <a href="http://www.juicebox.com.au" class="footer-primary__jb">Website by JuiceBox</a>
                <nav class="footer-primary__navigation">
                    {%
                        include 'nav/nav.twig' with {
                            nav: menus.footer_links,
                            navClass: "nav nav-justified"
                        } only
                    %}
                </nav>
                <p class="footer-primary__copy">&copy; {{ 'now'|date('Y') }} {{ site.name }}</p>
            {% endblock %}
            {% block afterRowContent %}{% endblock %}
        </div>
        {% block afterRow %}{% endblock %}
    </div>
    {% block afterContainer %}{% endblock %}
</footer>
